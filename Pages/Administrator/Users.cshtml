@page
@model Utterly.Pages.Administrator.UsersModel
@{
    ViewData["Title"] = "Hantera användare";
}
<h2>@ViewData["Title"]</h2>
<table class="table">
    <thead>
        <tr>
            <th>Användarnamn</th>
            <th>E-post</th>
            <th>Åtgärder</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var user in Model.Users)
    {
        <tr>
            <td>@user.UserName</td>
            <td>@user.Email</td>
            <td>
                <a asp-page="EditUser" asp-route-id="@user.Id" class="btn btn-secondary btn-sm">Redigera</a>
                <form method="post" asp-page-handler="DeleteUser" asp-route-id="@user.Id" style="display:inline;">
                    <button type="submit" class="btn btn-danger btn-sm">Ta bort</button>
                </form>
            </td>
        </tr>
    }
    </tbody>
</table>